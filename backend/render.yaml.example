services:
  # Backend: FastAPI Web Service
  - type: web
    name: lana-backend
    env: python
    plan: free
    rootDir: backend
    buildCommand: pip install -r requirements.txt
    startCommand: uvicorn main:app --host 0.0.0.0 --port $PORT
    autoDeploy: true
    envVars:
      - key: PYTHON_VERSION
        value: 3.11.0
      # Add your GROQ API key in Render dashboard
      - key: GROQ_API_KEY
        sync: false
      # Add your Google API key in Render dashboard
      - key: GOOGLE_API_KEY
        sync: false
      # Add your Supabase credentials in Render dashboard
      - key: SUPABASE_URL
        sync: false
      - key: SUPABASE_SERVICE_ROLE_KEY
        sync: false
      - key: SUPABASE_ANON_KEY
        sync: false
      - key: CORS_ORIGINS
        value: https://api.lanamind.com,https://lanamind.com,http://localhost:3000,http://localhost:3001,https://lana-ai.onrender.com
      - key: LOG_LEVEL
        value: INFO